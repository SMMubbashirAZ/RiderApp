<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/custom_dialog_title"
                style="@style/MyDownloadDialogTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Alert"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/custom_dialog_msg"
                style="@style/MyDownloadDialogTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want to download Data?"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/custom_dialog_cancel_btn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/button_dark_green_round_bg"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:text="No"
                    android:visibility="visible"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/custom_dialog_ok_btn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/button_dark_green_round_bg"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:text="Ok"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

                <Button
                    android:id="@+id/custom_dialog_accept_btn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/button_dark_yellow_round_bg"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:text="Yes"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>