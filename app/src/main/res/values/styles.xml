<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">#696969</item>
    </style>

    <style name="MyDownloadDialogTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/suzuki_pro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TabTextAppearanceWhite" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/suzuki_pro_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SearchbarStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:drawableEnd">@drawable/ic_search_icon</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/suzuki_pro_regular</item>
        <item name="android:textColorHint">#9F9F9F</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabText" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:fontFamily">@font/suzuki_pro_regular</item>
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="FullDialogTheme">
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>
    <style name="style_logout_button_background">
        <item name="android:background">@drawable/log_out</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/suzuki_pro_regular</item>
        <item name="android:paddingStart">@dimen/_30sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
    </style>

</resources>